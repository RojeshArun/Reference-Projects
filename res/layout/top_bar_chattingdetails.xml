<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/slidedown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:padding="@dimen/small_padding"
        android:src="@drawable/back_arrow"
        android:visibility="visible" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:padding="@dimen/small_padding"
        android:singleLine="true"
        android:text="Route"
        android:textColor="@android:color/white"
        android:textSize="@dimen/header_text_size"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/centerImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:padding="@dimen/small_padding"
        android:singleLine="true"
        android:src="@drawable/selector_tab2"
        android:textColor="@android:color/white"
        android:textSize="@dimen/header_text_size"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/rightButOneButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/rightMostButton"
        android:paddingBottom="@dimen/large_padding"
        android:paddingLeft="@dimen/large_padding"
        android:paddingRight="@dimen/micro_padding"
        android:paddingTop="@dimen/large_padding"
        android:src="@drawable/map_topbar"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/rightMostButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/micro_padding"
        android:layout_marginTop="@dimen/micro_padding"
        android:padding="@dimen/large_padding"
        android:src="@drawable/icn_user"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/txtView_LineTopBar"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/rightMostButton"
        android:layout_marginBottom="1dp"
        android:background="@android:color/white"
        android:gravity="bottom" />

</RelativeLayout>