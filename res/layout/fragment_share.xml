<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/main_bg"
    android:clickable="true"
    android:orientation="vertical" >

    <include
        android:id="@+id/topBars"
        layout="@layout/top_bar_floating" />

    <LinearLayout
        android:id="@+id/floatingLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/topBars"
        android:background="@drawable/box_back"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/padding_margin_fifteen" >

            <TextView
                android:id="@+id/txtView_Share"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/share"
                android:textColor="@color/text_color_fadedgreen"
                android:textSize="@dimen/text_size_thirteen" />
        </RelativeLayout>

        <ImageButton
            android:id="@+id/imgBtn_ShareFacebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/padding_margin_twentyfive"
            android:background="@drawable/selector_fb_hover" />

        <ImageButton
            android:id="@+id/imgBtn_ShareTwitter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/large_padding"
            android:background="@drawable/selector_twiter_hover" />

        <ImageButton
            android:id="@+id/imgBtn_ShareEmailUs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/large_padding"
            android:background="@drawable/selector_email_hover" />
    </LinearLayout>

</RelativeLayout>