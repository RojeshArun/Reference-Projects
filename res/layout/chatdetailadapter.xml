<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/datelayout"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone" >

        <TextView
            android:id="@+id/txtDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/small_padding"
            android:text="10 Dec 2014"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/mylayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/micro_padding"
        android:orientation="vertical"
        android:paddingBottom="@dimen/small_padding"
        android:paddingTop="@dimen/small_padding" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/my_txtdate"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/small_padding"
                android:gravity="center"
                android:singleLine="true"
                android:text="23523"
                android:textColor="@android:color/white" />

            <RelativeLayout
                android:id="@+id/chatting_lyt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/large_padding"
                android:layout_marginTop="@dimen/small_padding"
                android:background="@drawable/chat_bubble_2"
                android:padding="@dimen/small_padding" >

                <TextView
                    android:id="@+id/my_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="200dp"
                    android:padding="@dimen/small_padding"
                    android:text="hi "
                    android:textColor="@android:color/white" />

                <ImageView
                    android:id="@+id/my_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/my_text"
                    android:paddingRight="@dimen/small_padding"
                    android:paddingTop="@dimen/small_padding"
                    android:src="@drawable/location_pin_"
                    android:visibility="gone" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/myimageview"
                android:layout_width="@dimen/chat_pic_dim"
                android:layout_height="@dimen/chat_pic_dim"
                android:layout_marginBottom="@dimen/small_padding"
                android:layout_marginRight="@dimen/large_padding"
                android:layout_marginTop="@dimen/small_padding"
                android:contentDescription="@string/app_name"
                android:src="@drawable/logo" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/frndlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/micro_padding"
        android:paddingBottom="@dimen/small_padding"
        android:paddingTop="@dimen/small_padding"
        android:visibility="visible" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/frndimageview"
                android:layout_width="@dimen/chat_pic_dim"
                android:layout_height="@dimen/chat_pic_dim"
                android:layout_marginBottom="@dimen/small_padding"
                android:layout_marginLeft="@dimen/large_padding"
                android:layout_marginTop="@dimen/small_padding"
                android:contentDescription="@string/app_name"
                android:src="@drawable/logo" />

            <RelativeLayout
                android:id="@+id/chatting_friends_lyt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/small_padding"
                android:layout_marginTop="@dimen/small_padding"
                android:background="@drawable/chat_buble_1"
                android:maxWidth="200dp"
                android:padding="@dimen/small_padding" >

                <TextView
                    android:id="@+id/friend_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="200dp"
                    android:layout_marginLeft="@dimen/small_padding"
                    android:layout_marginRight="@dimen/small_padding"
                    android:layout_marginBottom="@dimen/small_padding"
                    android:layout_marginTop="@dimen/micro_padding"
                    android:padding="@dimen/small_padding"
                    android:text="hi "
                    android:textColor="@color/text_color_fadedgreen" />

                <ImageView
                    android:id="@+id/friend_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/friend_text"
                    android:paddingLeft="@dimen/large_padding"
                    android:paddingTop="@dimen/small_padding"
                    android:src="@drawable/location_pin_g"
                    android:visibility="gone" />
            </RelativeLayout>

            <TextView
                android:id="@+id/frnd_txtdate"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/small_padding"
                android:gravity="center"
                android:singleLine="true"
                android:text="3242"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>