<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/large_padding"
            android:layout_marginRight="@dimen/large_padding"
            android:layout_marginTop="@dimen/padding_margin_fifteen"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/imgView_Photo"
                    android:layout_width="@dimen/profile_pic_barter"
                    android:layout_height="@dimen/profile_pic_barter"
                    android:background="@drawable/no_images_" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/large_padding"
                    android:orientation="vertical" >

                    <EditText
                        android:id="@+id/edtText_FullName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/textfield_2"
                        android:gravity="center_vertical"
                        android:hint="@string/full_Name"
                        android:paddingBottom="@dimen/large_padding"
                        android:paddingLeft="@dimen/large_padding"
                        android:paddingRight="@dimen/small_padding"
                        android:paddingTop="@dimen/large_padding"
                        android:singleLine="true"
                        android:textColor="@color/text_color_fadedgreen"
                        android:textColorHint="@color/text_color_fadedgreen"
                        android:textSize="@dimen/text_size_tweleve" />

                    <EditText
                        android:id="@+id/edtText_UserName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/small_padding"
                        android:background="@drawable/textfield_2"
                        android:gravity="center_vertical"
                        android:hint="@string/first_Name"
                        android:paddingBottom="@dimen/large_padding"
                        android:paddingLeft="@dimen/large_padding"
                        android:paddingRight="@dimen/small_padding"
                        android:paddingTop="@dimen/large_padding"
                        android:singleLine="true"
                        android:textColor="@color/text_color_fadedgreen"
                        android:textColorHint="@color/text_color_fadedgreen"
                        android:textSize="@dimen/text_size_tweleve" />

                    <EditText
                        android:id="@+id/edtText_Surname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/textfield_2"
                        android:gravity="center_vertical"
                        android:hint="@string/last_Name"
                        android:paddingBottom="@dimen/large_padding"
                        android:paddingLeft="@dimen/large_padding"
                        android:paddingRight="@dimen/small_padding"
                        android:paddingTop="@dimen/large_padding"
                        android:singleLine="true"
                        android:textColor="@color/text_color_fadedgreen"
                        android:textColorHint="@color/text_color_fadedgreen"
                        android:textSize="@dimen/text_size_tweleve" />
                </LinearLayout>
            </LinearLayout>

            <EditText
                android:id="@+id/edttext_EmailId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/small_padding"
                android:background="@drawable/textfield_2"
                android:gravity="center_vertical"
                android:hint="@string/email_Id"
                android:paddingBottom="@dimen/large_padding"
                android:paddingLeft="@dimen/large_padding"
                android:paddingRight="@dimen/small_padding"
                android:paddingTop="@dimen/large_padding"
                android:singleLine="true"
                android:textColor="@color/text_color_fadedgreen"
                android:textColorHint="@color/text_color_fadedgreen"
                android:textSize="@dimen/text_size_tweleve" />

            <EditText
                android:id="@+id/edtText_Street"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/small_padding"
                android:background="@drawable/textfield_2"
                android:gravity="center_vertical"
                android:hint="@string/street_Name"
                android:paddingBottom="@dimen/large_padding"
                android:paddingLeft="@dimen/large_padding"
                android:paddingRight="@dimen/small_padding"
                android:paddingTop="@dimen/large_padding"
                android:singleLine="true"
                android:textColor="@color/text_color_fadedgreen"
                android:textColorHint="@color/text_color_fadedgreen"
                android:textSize="@dimen/text_size_tweleve" />

            <EditText
                android:id="@+id/edtText_City"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/small_padding"
                android:background="@drawable/textfield_2"
                android:gravity="center_vertical"
                android:hint="@string/city_Name"
                android:paddingBottom="@dimen/large_padding"
                android:paddingLeft="@dimen/large_padding"
                android:paddingRight="@dimen/small_padding"
                android:paddingTop="@dimen/large_padding"
                android:singleLine="true"
                android:textColor="@color/text_color_fadedgreen"
                android:textColorHint="@color/text_color_fadedgreen"
                android:textSize="@dimen/text_size_tweleve" />

            <EditText
                android:id="@+id/edtText_PinCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/small_padding"
                android:background="@drawable/textfield_2"
                android:gravity="center_vertical"
                android:hint="@string/pin_Code"
                android:inputType="number"
                android:paddingBottom="@dimen/large_padding"
                android:paddingLeft="@dimen/large_padding"
                android:paddingRight="@dimen/small_padding"
                android:paddingTop="@dimen/large_padding"
                android:singleLine="true"
                android:textColorHint="@color/text_color_fadedgreen"
                android:textSize="@dimen/text_size_tweleve" />

            <EditText
                android:id="@+id/edtText_State"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/small_padding"
                android:background="@drawable/textfield_2"
                android:gravity="center_vertical"
                android:hint="@string/state_Name"
                android:paddingBottom="@dimen/large_padding"
                android:paddingLeft="@dimen/large_padding"
                android:paddingRight="@dimen/small_padding"
                android:paddingTop="@dimen/large_padding"
                android:singleLine="true"
                android:textColorHint="@color/text_color_fadedgreen"
                android:textSize="@dimen/text_size_tweleve" />

            <EditText
                android:id="@+id/edtText_Country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/small_padding"
                android:background="@drawable/textfield_2"
                android:gravity="center_vertical"
                android:hint="@string/country_Name"
                android:paddingBottom="@dimen/large_padding"
                android:paddingLeft="@dimen/large_padding"
                android:paddingRight="@dimen/small_padding"
                android:paddingTop="@dimen/large_padding"
                android:singleLine="true"
                android:textColor="@color/text_color_fadedgreen"
                android:textColorHint="@color/text_color_fadedgreen"
                android:textSize="@dimen/text_size_tweleve" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/small_padding"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/edtText_ISDCode"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".2"
                    android:background="@drawable/textfield_2"
                    android:hint="@string/ISD_Num"
                    android:inputType="number"
                    android:paddingBottom="@dimen/large_padding"
                    android:paddingLeft="@dimen/large_padding"
                    android:paddingRight="@dimen/small_padding"
                    android:paddingTop="@dimen/large_padding"
                    android:singleLine="true"
                    android:textColor="@color/text_color_fadedgreen"
                    android:textColorHint="@color/text_color_fadedgreen"
                    android:textSize="@dimen/text_size_tweleve" />

                <EditText
                    android:id="@+id/edtText_PhoneNum"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight=".8"
                    android:background="@drawable/textfield_2"
                    android:hint="@string/phone_Num"
                    android:inputType="number"
                    android:paddingBottom="@dimen/large_padding"
                    android:paddingLeft="@dimen/large_padding"
                    android:paddingRight="@dimen/small_padding"
                    android:paddingTop="@dimen/large_padding"
                    android:singleLine="true"
                    android:textColor="@color/text_color_fadedgreen"
                    android:textColorHint="@color/text_color_fadedgreen"
                    android:textSize="@dimen/text_size_tweleve" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>