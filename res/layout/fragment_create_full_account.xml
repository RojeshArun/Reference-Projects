<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg" >

    <include
        android:id="@+id/topBar"
        layout="@layout/top_bar_floating" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/topBar"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/large_padding"
            android:layout_marginRight="@dimen/large_padding"
            android:layout_marginTop="@dimen/padding_margin_twenty"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <ImageView
                        android:id="@+id/imgView_PhotoCFA"
                        android:layout_width="@dimen/profile_pic_dim"
                        android:layout_height="@dimen/profile_pic_dim"
                        android:padding="2dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/no_images_" />

                    <ImageView
                        android:layout_width="@dimen/profile_pic_dim"
                        android:layout_height="@dimen/profile_pic_dim"
                        android:background="@drawable/shape_rectangle_images" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/small_padding"
                    android:orientation="vertical" >

                    <EditText
                        android:id="@+id/edtText_FirstNameCreateFullAccount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/textfield_small"
                        android:gravity="center_vertical"
                        android:hint="@string/first_Name_create"
                        android:paddingBottom="@dimen/large_padding"
                        android:paddingLeft="@dimen/padding_margin_fifteen"
                        android:paddingRight="@dimen/large_padding"
                        android:paddingTop="@dimen/large_padding"
                        android:singleLine="true"
                        android:textColor="@android:color/white"
                        android:textColorHint="@android:color/white"
                        android:textCursorDrawable="@null"
                        android:textSize="@dimen/text_size_tweleve" />

                    <EditText
                        android:id="@+id/edtText_LastnameCreateFullAccount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/small_padding"
                        android:background="@drawable/textfield_small"
                        android:gravity="center_vertical"
                        android:hint="@string/last_Name_create"
                        android:paddingBottom="@dimen/large_padding"
                        android:paddingLeft="@dimen/padding_margin_fifteen"
                        android:paddingRight="@dimen/large_padding"
                        android:paddingTop="@dimen/large_padding"
                        android:singleLine="true"
                        android:textColor="@android:color/white"
                        android:textColorHint="@android:color/white"
                        android:textCursorDrawable="@null"
                        android:textSize="@dimen/text_size_tweleve" />
                </LinearLayout>
            </LinearLayout>

            <EditText
                android:id="@+id/edttext_AddressCreateFullAccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/small_padding"
                android:background="@drawable/textfield_small"
                android:gravity="center_vertical"
                android:hint="@string/address"
                android:paddingBottom="@dimen/large_padding"
                android:paddingLeft="@dimen/padding_margin_fifteen"
                android:paddingRight="@dimen/large_padding"
                android:paddingTop="@dimen/large_padding"
                android:singleLine="true"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/text_size_tweleve" />

            <EditText
                android:id="@+id/edtText_CityCreateFullAccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/small_padding"
                android:background="@drawable/textfield_small"
                android:gravity="center_vertical"
                android:hint="@string/city_Name_create"
                android:paddingBottom="@dimen/large_padding"
                android:paddingLeft="@dimen/padding_margin_fifteen"
                android:paddingRight="@dimen/large_padding"
                android:paddingTop="@dimen/large_padding"
                android:singleLine="true"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/text_size_tweleve" />

            <EditText
                android:id="@+id/edtText_ZipCodeCreateFullAccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/small_padding"
                android:background="@drawable/textfield_small"
                android:gravity="center_vertical"
                android:hint="@string/zipcode"
                android:inputType="text"
                android:paddingBottom="@dimen/large_padding"
                android:paddingLeft="@dimen/padding_margin_fifteen"
                android:paddingRight="@dimen/large_padding"
                android:paddingTop="@dimen/large_padding"
                android:singleLine="true"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/text_size_tweleve" />

            <TextView
                android:id="@+id/txtView_CountryCreateFullAccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/small_padding"
                android:background="@drawable/selector_dropdown_white"
                android:gravity="center_vertical"
                android:hint="@string/country_Name_create"
                android:paddingBottom="@dimen/large_padding"
                android:paddingLeft="@dimen/padding_margin_fifteen"
                android:paddingRight="@dimen/large_padding"
                android:paddingTop="@dimen/large_padding"
                android:singleLine="true"
                android:textColor="@drawable/text_color"
                android:textColorHint="@android:color/white"
                android:textSize="@dimen/text_size_tweleve" />

            <TextView
                android:id="@+id/txtView_StateCreateFullAccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/small_padding"
                android:background="@drawable/selector_dropdown_white"
                android:gravity="center_vertical"
                android:hint="@string/state_Name_state"
                android:paddingBottom="@dimen/large_padding"
                android:paddingLeft="@dimen/padding_margin_fifteen"
                android:paddingRight="@dimen/large_padding"
                android:paddingTop="@dimen/large_padding"
                android:singleLine="true"
                android:textColor="@drawable/text_color"
                android:textColorHint="@android:color/white"
                android:textSize="@dimen/text_size_tweleve" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/small_padding"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/edtText_ISDCodeCreateFullAccount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".2"
                    android:background="@drawable/textfield_small"
                    android:editable="false"
                    android:gravity="center"
                    android:hint="@string/ISD_Code_Create_Account"
                    android:inputType="number"
                    android:padding="@dimen/small_padding"
                    android:singleLine="true"
                    android:textColor="@android:color/white"
                    android:textColorHint="@android:color/white"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/text_size_tweleve" />

                <EditText
                    android:id="@+id/edtText_PhoneNumCreateFullAccount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/small_padding"
                    android:layout_weight=".8"
                    android:background="@drawable/textfield_small"
                    android:gravity="center_vertical"
                    android:hint="@string/mobile_no"
                    android:inputType="number"
                    android:paddingBottom="@dimen/padding_margin_ten"
                    android:paddingLeft="@dimen/large_padding"
                    android:paddingRight="@dimen/large_padding"
                    android:paddingTop="@dimen/padding_margin_ten"
                    android:singleLine="true"
                    android:textColor="@android:color/white"
                    android:textColorHint="@android:color/white"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/text_size_tweleve" />
            </LinearLayout>

            <TextView
                android:id="@+id/txtView_DateOfBirthCreateFullAccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/small_padding"
                android:background="@drawable/selector_dropdown_white"
                android:gravity="center_vertical"
                android:hint="@string/dateofbirth"
                android:paddingBottom="@dimen/large_padding"
                android:paddingLeft="@dimen/padding_margin_fifteen"
                android:paddingRight="@dimen/large_padding"
                android:paddingTop="@dimen/large_padding"
                android:singleLine="true"
                android:textColor="@drawable/text_color"
                android:textColorHint="@drawable/text_color"
                android:textSize="@dimen/text_size_tweleve" />

            <TextView
                android:id="@+id/txtView_ProvideDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/large_padding"
                android:gravity="center"
                android:text="@string/provide_details_create"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_tweleve" />

            <TextView
                android:id="@+id/txtView_SkipCreateFullAccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding_margin_twentyfive"
                android:layout_marginLeft="@dimen/padding_margin_fifteen"
                android:layout_marginRight="@dimen/padding_margin_fifteen"
                android:layout_marginTop="@dimen/padding_margin_ten"
                android:background="@drawable/selector_login_txt_button"
                android:clickable="true"
                android:gravity="center"
                android:paddingBottom="@dimen/padding_margin_ten"
                android:paddingTop="@dimen/padding_margin_ten"
                android:text="@string/skip"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_fifteen"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>

    <include
        android:id="@+id/loadingllyt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/loading_layout"
        android:visibility="gone" />

</RelativeLayout>